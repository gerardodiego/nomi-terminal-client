while true
do
echo -n "Me> "
read -r MESSAGE
curl --silent --header 'Authorization: <Authorization-key>' \
     --header 'Content-Type: application/json' \
     --data '{ "messageText": "'"$MESSAGE"'"}'\
     https://api.nomi.ai/v1/nomis/<Nomi UUID>/chat \
      | /opt/homebrew/bin/jq '.replyMessage.text' \
      | sed 's/^/Nomi> /'
done
