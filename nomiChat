while true
do
echo -n "Me> "
read -r MESSAGE

MESSAGE=$(echo "$MESSAGE" | sed -r 's/"/Â¨/g') #Replace double quotes by single quotes
curl --silent --header 'Authorization: YOUR_NOMI_API_KEY' \
     --header 'Content-Type: application/json' \
     --data '{ "messageText": "'"$MESSAGE"'"}'\
     https://api.nomi.ai/v1/nomis/YOUR_NOMI_ID/chat \
      | /opt/homebrew/bin/jq '.replyMessage.text' \
      | tr -d '"' \
      | sed 's/^/Nomi> /'
done